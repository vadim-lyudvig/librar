<Window x:Class="LibraryApp.RegistrationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="RegistrationsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" AutoGenerateColumns="False" x:Name="readersGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding bookname}" Header="#Книга" Width="120"/>
                <DataGridTextColumn Binding="{Binding readername}" Header="Читатель" Width="250"/>
                <DataGridTextColumn Binding="{Binding from}" Header="Выдана с" Width="250"/>
                <DataGridTextColumn Binding="{Binding to}" Header="Вернуть до" Width="80*"/>
                <DataGridTextColumn Binding="{Binding count}" Header="Кол-во Книг" Width="80*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Name="BT_Update" Click="BT_Update_Click" Content="Обновить"/>
    </Grid>
</Window>
